<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>bpt-resource-management-vaadin</display-name>
	<context-param>
		<description>
		Vaadin production mode</description>
		<param-name>productionMode</param-name>
		<param-value>false</param-value>
	</context-param>
	<servlet>
		<servlet-name>Bpt_resource_management_vaadin Application</servlet-name>
		<servlet-class>de.uni_potsdam.hpi.bpt.resource_management.vaadin.GoogleChartsApplicationServlet</servlet-class>
		<init-param>
			<description>
			Vaadin application class to start</description>
			<param-name>UI</param-name>
			<param-value>de.uni_potsdam.hpi.bpt.resource_management.vaadin.BPTApplicationUI</param-value>
		</init-param>
		<init-param>
			<param-name>legacyPropertyToString</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Bpt_resource_management_vaadin Application</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>BPTServlet</servlet-name>
    	<servlet-class>de.uni_potsdam.hpi.bpt.resource_management.BPTServlet</servlet-class>
    	<load-on-startup>1</load-on-startup>
	</servlet>
</web-app>
